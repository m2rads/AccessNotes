{
    "name": "AccessNotes",
    "version": "2.0.0",
    "manifest_version": 3,
    "description": "Web annotation tool that lives in your pocket.",
    "icons": {
      "64": "icons/icon-64.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./main.js"],
        "css": ["/main.css"]
      }
    ],
    "permissions": [
      "storage"
    ],
    "action": {
      "default_icon": {
        "64": "icons/icon-64.png"
      },
      "default_popup": "./popup.html"
    },
    "host_permissions": [
      "*://*/*"
    ]
}